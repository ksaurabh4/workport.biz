  KEY `announcement_comp_id` (`announcement_comp_id`),
  CONSTRAINT `announcements_ibfk_1` FOREIGN KEY (`announcement_comp_id`) REFERENCES `companies` (`comp_id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci;


-- workport_db.plans definition

CREATE TABLE `plans` (
